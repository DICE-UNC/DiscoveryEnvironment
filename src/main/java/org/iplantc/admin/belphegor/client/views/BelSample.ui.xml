<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:gxt='urn:import:com.sencha.gxt.widget.core.client'
             xmlns:con='urn:import:com.sencha.gxt.widget.core.client.container'>
	
	<ui:with type="org.iplantc.admin.belphegor.client.BelphegorResources" field="res" />
	<ui:with type="org.iplantc.core.resources.client.messages.IplantDisplayStrings" field="strings" />

	<ui:with type="com.sencha.gxt.core.client.util.Margins" field="centerMargins">
    	<ui:attributes top="0" right="0" bottom="0" left="0" />
  	</ui:with>
	
	<ui:with type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData" field="northData">
		<ui:attributes size="143"/>
	</ui:with>
	
	<ui:with type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData" field="centerData">
		<ui:attributes margins="{centerMargins}"/>
	</ui:with>
	
	<ui:with type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData" field="southData">
		<ui:attributes size="20"/>
	</ui:with>
	
	<con:Viewport>
		<con:BorderLayoutContainer>
			<con:north layoutData="{northData}">
				<con:HtmlLayoutContainer ui:field="northCon">
					<div class="{res.css.iplantcHeader}">
						<table>
							<tbody>
								<tr>
									<td role="presentation" align="LEFT" valign="TOP"><div class="{res.css.iplantcLogo}"></div></td>
									<td role="presentation" align="LEFT" valign="TOP"><div class="{res.css.iplantcHeaderMenu}">Menu</div></td>
								</tr>
							</tbody>
						</table>
					</div>
				</con:HtmlLayoutContainer>
			</con:north>
			
			<con:center layoutData="{centerData}">
				<gxt:TabPanel>
					<gxt:child>
						<con:SimpleContainer ui:field="appsPanel"/>
					</gxt:child>
					<gxt:child>
						<con:SimpleContainer ui:field="refGenomePanel"/>
					</gxt:child>
					<gxt:child>
						<con:SimpleContainer ui:field="toolRequestPanel"/>
					</gxt:child>
					<gxt:child>
						<con:SimpleContainer ui:field="systemMessagesPanel"/>
					</gxt:child>
				</gxt:TabPanel>
			</con:center>
			
			<con:south layoutData="{southData}">
				<g:HTMLPanel>
					<div class=" x-component x-border-panel" style="overflow: visible; background-color: rgb(254, 253, 221); left: 0px; top: 682px; width: 1168px; height: 20px;">
						<table role="presentation" cellpadding="0" cellspacing="0">
							<tbody role="presentation">
								<tr role="presentation">
									<td role="presentation" align="LEFT" valign="TOP">
										<div class="copyright x-component"><ui:safehtml from="{strings.projectCopyrightStatement}"/></div>
									</td>
									<td role="presentation" align="LEFT" valign="TOP">
										<div class="nsf_text x-component"><ui:safehtml from="{strings.nsfProjectText}"/></div>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
				</g:HTMLPanel>
			</con:south>
		</con:BorderLayoutContainer>
	</con:Viewport>
</ui:UiBinder>