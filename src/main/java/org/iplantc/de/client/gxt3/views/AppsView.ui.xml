<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tree="urn:import:com.sencha.gxt.widget.core.client.tree"
             xmlns:grid="urn:import:com.sencha.gxt.widget.core.client.grid"
             xmlns:toolbar="urn:import:com.sencha.gxt.widget.core.client.toolbar">

    <!-- Nav Panel -->
   <ui:with field="treeStore"
            type="com.sencha.gxt.data.shared.TreeStore" />
   <ui:with field="valueProvider"
            type="com.sencha.gxt.core.client.ValueProvider" />
             
    <!-- Main Panel -->
   <ui:with field="listStore"
            type="com.sencha.gxt.data.shared.ListStore" />
   <ui:with field="cm"
            type="com.sencha.gxt.widget.core.client.grid.ColumnModel" />
   <ui:with field="gridView"
            type="com.sencha.gxt.widget.core.client.grid.GridView">
      <ui:attributes forcefit="true" />
   </ui:with>
  
    <!-- Border Layout Data -->
   <ui:with field="outerMargins"
            type="com.sencha.gxt.core.client.util.Margins">
      <ui:attributes top="20"
                     right="20"
                     bottom="20"
                     left="20" />
   </ui:with>
   <ui:with field="northMargins"
            type="com.sencha.gxt.core.client.util.Margins">
      <ui:attributes top="5"
                     right="5"
                     bottom="5"
                     left="5" />
   </ui:with>
   <ui:with field="westMargins"
            type="com.sencha.gxt.core.client.util.Margins">
      <ui:attributes top="0"
                     right="5"
                     bottom="0"
                     left="5" />
   </ui:with>
   <ui:with field="centerMargins"
            type="com.sencha.gxt.core.client.util.Margins">
      <ui:attributes top="0"
                     right="0"
                     bottom="0"
                     left="0" />
   </ui:with>
   <ui:with field="eastMargins"
            type="com.sencha.gxt.core.client.util.Margins">
      <ui:attributes top="0"
                     right="5"
                     bottom="0"
                     left="5" />
   </ui:with>

   <ui:with field="outerData"
            type="com.sencha.gxt.widget.core.client.container.MarginData">
      <ui:attributes margins="{outerMargins}" />
   </ui:with>
   <ui:with field="northData"
            type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData">
      <ui:attributes margins="{northMargins}"
                     size="100" />
   </ui:with>
   <ui:with field="westData"
            type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData">
      <ui:attributes margins="{westMargins}"
                     size="150"
                     collapsible="true"
                     split="true" />
   </ui:with>
   <ui:with field="centerData"
            type="com.sencha.gxt.widget.core.client.container.MarginData">
      <ui:attributes margins="{centerMargins}" />
   </ui:with>
   <ui:with field="eastData"
            type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData">
      <ui:attributes margins="{eastMargins}"
                     size="150" />
   </ui:with>

   <!-- Center Vertical Layout Con Data -->
   <ui:with
      field="gridData"
      type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData">
      <ui:attributes
         width="1"
         height="1" />
   </ui:with>

   <ui:with
      field="toolBarData"
      type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData">
      <ui:attributes
         width="1"
         height="1" />
   </ui:with>

   <container:SimpleContainer>
      <container:child layoutData="{outerData}">
         <container:BorderLayoutContainer ui:field="con"
                                          borders="true">
					
                <!-- This is the tool bar -->
            <container:north layoutData="{northData}">
               <gxt:ContentPanel>
                  <!-- TODO Implement the upper toolbar -->
               </gxt:ContentPanel>
            </container:north>
                <!-- This is the navigation panel -->
            <container:west layoutData="{westData}">
               <gxt:ContentPanel ui:field="navPanel">
                  <tree:Tree ui:field="tree"
                             valueProvider="{valueProvider}"
                             store="{treeStore}" />
               </gxt:ContentPanel>
            </container:west>
			    <!-- This is the main panel -->
            <container:center layoutData="{centerData}">
               <gxt:ContentPanel ui:field="mainPanel"
                                 headingText="BorderLayout UiBinder Example"
                                 resize="false">
                  <container:VerticalLayoutContainer>
                     <container:child layoutData="{gridData}">
                        <grid:Grid ui:field="grid"
                                   cm="{cm}"
                                   store="{listStore}"
                                   view="{gridView}" />
                     </container:child>
                     <container:child layoutData="{toolBarData}">
                        <toolbar:ToolBar ui:field="toolbar" />
                     </container:child>
                  </container:VerticalLayoutContainer>

               </gxt:ContentPanel>
            </container:center>
				<!-- This is the details panel -->
            <container:east layoutData="{eastData}">
               <gxt:ContentPanel ui:field="detailPanel" />
            </container:east>
         </container:BorderLayoutContainer>
      </container:child>
   </container:SimpleContainer>
</ui:UiBinder>