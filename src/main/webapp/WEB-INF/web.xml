<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <context-param>
        <param-name>appPropertyFile</param-name>
        <param-value>belphegor.properties</param-value>
    </context-param>
    <context-param>
        <param-name>appPropertyPrefix</param-name>
        <param-value>org.iplantc.belphegor</param-value>
    </context-param>
    <context-param>
        <param-name>org.iplantc.initial-page</param-name>
        <param-value></param-value>
    </context-param>
    <context-param>
        <param-name>org.iplantc.properties.confluence</param-name>
        <param-value>/belphegor-confluence.properties</param-value>
    </context-param>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            /WEB-INF/classes/belphegor-base.xml
            /WEB-INF/classes/belphegor-security.xml
        </param-value>
    </context-param>

    <!-- Filters -->
    <filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>

    <!-- Filter Mapping Definitions -->
    <filter-mapping>
        <filter-name>springSecurityFilterChain</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <servlet>
        <servlet-name>emptyResponseServlet</servlet-name>
        <servlet-class>org.iplantc.de.server.EmptyResponseServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>confluenceServlet</servlet-name>
        <servlet-class>org.iplantc.de.server.ConfluenceServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>confluenceServlet</servlet-name>
        <url-pattern>/discoveryenvironment/confluence</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>emptyResponseServlet</servlet-name>
        <url-pattern>/belphegor/empty</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>confluenceServlet</servlet-name>
        <url-pattern>/belphegor/confluence</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>org.iplantc.belphegor.server.BelphegorServletContextListener</listener-class>
    </listener>

    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>belphegor.jsp</welcome-file>
    </welcome-file-list>

</web-app>
